// Conditionals6.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream>

int main()
{
    std::cout << "Enter month: ";

    int month;
    std::cin >> month;

    switch (month)
    {
    case 1: case 3: case 5: case 7: case 8: case 10: case 12:
        std::cout << "31 Days" << std::endl; break;

    case 4: case 6: case 9: case 11:
        std::cout << "30 days" << std::endl; break;

    case 2: {
        unsigned year;
        std::cout << "Enter year: ";
        std::cin >> year;

        bool isLeap = ((year % 4 == 0 && year % 100 != 0) || (year % 400 == 0));
        std::cout << (isLeap ? "29 Days" : "28 Days") << std::endl; break;
    }
    default:
        std::cout << "Invalid input for month!" << std::endl; break;
    }
}

